<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adapter_image_box"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/xd" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/adapter_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Restaurant Name"/>
        <TextView
            android:id="@+id/adapter_restaurant_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating"/>
        <TextView
            android:id="@+id/adapter_restaurant_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"/>
        <TextView
            android:id="@+id/adapter_restaurant_opening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opening Hours"/>
        <TextView
            android:id="@+id/adapter_restaurant_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance"/>


    </LinearLayout>





</LinearLayout>